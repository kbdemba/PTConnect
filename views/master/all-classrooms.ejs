<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/flash %>



  <!-- table for all classrooms for master -->
  <section id="all-parents-table" class="">
    <div class="container" style="min-height:80vh;padding-top:55px;">
      <h1>All the Classroms are in here</h1>
      <%=classrooms.length%>
      <h3>Number of classrooms: <%=classrooms.length %></h3>
      <h3 class="text-center mt-4 mb-1">All Teachers</h3>
      <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
        <hr class="w-50 mt-0 ">
      </div>
      <table class="table bg-dark table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Class Name</th>
              <th scope="col">Class Teacher</th>
              <th scope="col">Number of Students</th>
            </tr>
          </thead>
          <tbody>
            <% classrooms.forEach((classroom,index) => { %>
              <tr>
                  <th scope="row"><%= index + 1%></th>
                  <td><a href="/master/<%=classroom._id%>/show-classroom" class="name-on-anchor">
                      <%=classroom.class_name %> </a>
                  </td>
                  <td><%=classroom.teacher.name.first_name %> <%=classroom.teacher.name.last_name %></td>
                  <td><%=classroom.students.length %> </td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  </section>


<% include ../partials/footer %>
