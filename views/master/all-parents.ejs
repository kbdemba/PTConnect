<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/flash %>

  <div class="container mt-5"></div>
  <h1>All the parents and students are in here</h1>

  <!-- table for all Parents for Master -->
  <section id="all-parents-table" class="">
    <div class="container">
      <h3>Number of students: <%=parents.length %></h3>
      <h3 class="text-center mt-4 mb-1">All Parents</h3>
      <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
        <hr class="w-50 mt-0 ">
      </div>
      <table class="table bg-dark table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Parent Name</th>
              <th scope="col">Child Name</th>
              <th scope="col">Current behavior</th>
            </tr>
          </thead>
          <tbody>
            <% parents.forEach((parent,index) => { %>
              <tr>
                  <th scope="row"><%= index + 1%></th>
                  <td><a href="/teacher/<%=parent._id%>/show" class="name-on-anchor">
                      <%=parent.parent_name.first_name %> <%=parent.parent_name.last_name %></a>
                  </td>
                  <td><%=parent.student_name.first_name %> <%=parent.student_name.last_name %></td>
                  <td><%=parent.behavior %> </td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  </section>


<% include ../partials/footer %>
