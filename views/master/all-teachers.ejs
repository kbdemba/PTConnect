<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/flash %>


  <!-- table for student Lists -->
  <section id="all-parents-table" class="" style="min-height: 75vh;">
    <div class="container">
      <div class="container mt-5"></div>
      <h1>All the Teachers are in here</h1>
      <h3>Number of students: <%=teachers.length %></h3>
      <h3 class="text-center mt-4 mb-1">All Teachers</h3>
      <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
        <hr class="w-50 mt-0 ">
      </div>
      <table class="table bg-dark table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Teacher Name</th>
              <th scope="col">Class Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <% teachers.forEach((teacher,index) => { %>
              <tr>
                  <th scope="row"><%= index + 1%></th>
                  <td><a href="/teacher/<%=teacher._id%>/show" class="name-on-anchor">
                      <%=teacher.name.first_name %> <%=teacher.name.last_name %></a>
                  </td>
                  <td><%=teacher.class_name %></td>
                  <td><%=teacher.email %> </td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  </section>


<% include ../partials/footer %>
