<div class="container">
    <div class="row">
        <h1 style="text-align: center">Register New Account</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form method="POST" action="/teacher/addNewStudent">
                <div class="form-group">
                    <input class="form-control" type="text" name="studentName" placeholder="student name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ParentName" placeholder="parent name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="ssn" placeholder="last 4 digit of SS">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Create Account</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
