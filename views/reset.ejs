<% include ./partials/header %>
  <% include ./partials/nav %>
  <!-- make sure the msg flash is visible because the nav bar will hide it -->
  <% include ./partials/flash %>
<div class="container mt-5" style="min-height:77vh">
  <h3 class="text-center pt-2">Reset Password</h3>
  <form action="/reset/<%=token%>" method="post">
    <div class="form-row">
      <div class="col-md-7">
        <div class="form-group">
          <label for="pw" class="ml-2 lead">New Password:</label>
          <input type="password" name="password" class="xxx form-control input-rounded" id="pw" placeholder="New Password">
        </div>
        <div class="form-group">
          <label for="confirm" class="ml-2 lead">Confirm Password:</label>
          <input type="password" name="confirm" class="form-control mb-3 input-rounded" id="confirm" placeholder="Confirm Password">
        </div>
        <button type="submit" class="btn btn-dark form-control">Reset</button>
      </div>
    </div>
  </form>
</div>
<% include ./partials/footer %>
