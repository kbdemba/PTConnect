<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/flash %>

  <section id="teacher-header" class="">
    <div class="container">
      <div class="row text-center">
          <div class="col-md-6">
            <h3 class="display-5 lead">Class Name: <span class="classInfo"><%= teacher.className %></span></h3>
            <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
              <hr class="w-50 mt-0 ">
            </div>
          </div>
          <div class="col-md-6">
            <h3 class="display-5 lead">Number Of Students: <span class="classInfo"><%= students.length %></span></h3>
            <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
              <hr class="w-50 mt-0 ">
            </div>
          </div>
        </div>
    </div>
  </section>

  <!-- table for student Lists -->
  <section id="studentsTable" class="">
    <div class="container">
      <h3 class="text-center mt-4 mb-1">Students</h3>
      <div class=" bg-dark mx-auto w-50 mt-0 mb-4">
        <hr class="w-50 mt-0 ">
      </div>
      <table class="table bg-dark table-hover table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Current behavior</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student,index) => { %>
              <tr>
                  <th scope="row"><%= index + 1%></th>
                  <td><a href="teacher/<%=student._id%>/show" class="studentNameOnAnchor"><%=student.studentName %></a></td>
                  <td><%=student.parentName %></td>
                  <td><%=student.behavior %> </td>
              </tr>
            <% }) %>
          </tbody>
      </table>
    </div>
  </section>

<% include ../partials/footer %>
